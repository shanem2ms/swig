{
  "version": 5,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 15,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "x64-debug",
      "displayName": "Debug aWindows",
      "binaryDir": "${sourceDir}/build/x64-debug",
      "generator": "Ninja",
      "toolchainFile": "${sourceDir}/../vcpkg/scripts/buildsystems/vcpkg.cmake",
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": {
          "type": "string",
          "value": "x64-windows"
        },
        "PROJ_INSTALL_PATH": {
          "type": "FILEPATH",
          "value": "${sourceDir}/install/x64-debug"
        },
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "debugclg",
      "displayName": "Debug Windows Clang",
      "binaryDir": "${sourceDir}/build/debugclg",
      "generator": "Ninja",
      "toolchainFile": "${sourceDir}/../vcpkg/scripts/buildsystems/vcpkg.cmake",
      "cacheVariables": {
        "MAKE_SYMBOLS": true,
        "CMAKE_CXX_COMPILER": "C:/Program Files/LLVM/bin/clang++.exe",
        "CMAKE_C_COMPILER": "C:/Program Files/LLVM/bin/clang.exe",
        "VCPKG_TARGET_TRIPLET": {
          "type": "string",
          "value": "x64-windows"
        },
        "PROJ_INSTALL_PATH": {
          "type": "FILEPATH",
          "value": "${sourceDir}/install/x64-debug"
        },
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "x64-release",
      "displayName": "Release Windows",
      "binaryDir": "${sourceDir}/build/x64-release",
      "generator": "Ninja",
      "toolchainFile": "${sourceDir}/../vcpkg/scripts/buildsystems/vcpkg.cmake",
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": {
          "type": "string",
          "value": "x64-windows"
        },
        "PROJ_INSTALL_PATH": {
          "type": "FILEPATH",
          "value": "${sourceDir}/install/x64-Release"
        },
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "debug-macos",
      "displayName": "Debug Macos",
      "binaryDir": "${sourceDir}/build/arm64-debug",
      "generator": "Unix Makefiles",
      "toolchainFile": "${sourceDir}/../vcpkg/scripts/buildsystems/vcpkg.cmake",
      "cacheVariables": {
        "CMAKE_FIND_FRAMEWORK": "LAST",
        "VCPKG_TARGET_TRIPLET": {
          "type": "string",
          "value": "arm64-osx"
        },
        "PROJ_INSTALL_PATH": {
          "type": "FILEPATH",
          "value": "${sourceDir}/install/arm64-debug"
        },
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "release-macos",
      "displayName": "Release Macos",
      "binaryDir": "${sourceDir}/build/arm64-release",
      "generator": "Unix Makefiles",
      "toolchainFile": "${sourceDir}/../vcpkg/scripts/buildsystems/vcpkg.cmake",
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": {
          "type": "string",
          "value": "arm64-osx"
        },
        "PROJ_INSTALL_PATH": {
          "type": "FILEPATH",
          "value": "${sourceDir}/install/arm64-release"
        },
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    },
    {
      "name": "debug-ios",
      "displayName": "Debug IOS",
      "binaryDir": "${sourceDir}/build/debug-ios",
      "generator": "Unix Makefiles",
      "toolchainFile": "${sourceDir}/../vcpkg/scripts/buildsystems/vcpkg.cmake",
      "cacheVariables": {
        "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "${sourceDir}/scripts/ios.toolchain.cmake",
        "VCPKG_TARGET_TRIPLET": {
          "type": "string",
          "value": "arm64-ios"
        },
        "PROJ_INSTALL_PATH": {
          "type": "FILEPATH",
          "value": "${sourceDir}/install/debug-ios"
        },
        "SHADERC_PATH": {
          "type": "FILEPATH",
          "value": "${sourceDir}/install/debug-macos"
        },
        "CMAKE_BUILD_TYPE": "Debug",
        "PLATFORM": "OS64",
        "ENABLE_ARC": false,
        "ENABLE_BITCODE": false,
        "DEPLOYMENT_TARGET": "15.4"
      }
    },
    {
      "name": "release-ios",
      "displayName": "Release IOS",
      "binaryDir": "${sourceDir}/build/release-ios",
      "generator": "Unix Makefiles",
      "toolchainFile": "${sourceDir}/../vcpkg/scripts/buildsystems/vcpkg.cmake",
      "cacheVariables": {
        "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "${sourceDir}/scripts/ios.toolchain.cmake",
        "VCPKG_TARGET_TRIPLET": {
          "type": "string",
          "value": "arm64-ios"
        },
        "PROJ_INSTALL_PATH": {
          "type": "FILEPATH",
          "value": "${sourceDir}/install/release-ios"
        },
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "PLATFORM": "OS64",
        "ENABLE_ARC": false,
        "ENABLE_BITCODE": false,
        "DEPLOYMENT_TARGET": "15.4"
      }
    }

  ]
}